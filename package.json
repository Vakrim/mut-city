{
  "name": "mut-city",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "watch": "webpack --watch --mode development"
  },
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.92",
    "jest": "^23.5.0",
    "lodash": "^4.17.4",
    "roughjs": "https://github.com/Vakrim/rough.git",
    "ts-jest": "^23.1.4"
  },
  "devDependencies": {
    "ts-loader": "^4.1.0",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "collectCoverage": true,
  "coverageReporters": [
    "lcov"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts"
  ]
}
